<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="2dp"
    android:layout_height="180dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        android:id="@+id/sliderImageView"/>

    <ImageView
        android:id="@+id/sliderGeri"
        android:src="@drawable/geri_ok2"
        android:layout_gravity="center_vertical"
        android:layout_width="40dp"
        android:layout_marginLeft="10dp"
        android:layout_height="40dp"/>
    <ImageView
        android:id="@+id/sliderIleri"
        android:src="@drawable/ileri_ok"
        android:layout_gravity="center_vertical|end"
        android:layout_width="40dp"
        android:layout_marginRight="10dp"
        android:layout_height="40dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="6dp">

        <TextView
            android:id="@+id/sliderTarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="6dp"
            android:text="12.10.2020" />


    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>